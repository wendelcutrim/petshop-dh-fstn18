<!DOCTYPE html>
<html lang="pt-BR">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/css/style.css" />
		<link rel="stylesheet" href="/css/admin-services-home.css" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
			crossorigin="anonymous"
		/>

		<title>Admin | Serviços</title>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
			crossorigin="anonymous"
			defer
		></script>
	</head>
	<body>
		<%- include('../../components/header.ejs') %>

		<main>
			<div class="services-container">
				<div class="title">
					<h1><%= pageTitle %></h1>
					<a href="/admin/services/create">
						<button class="btn btn-primary">cadastrar</button>
					</a>
				</div>

				<table class="table table-dark table-striped table-hover">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">Nome</th>
							<th scope="col">Imagem</th>
							<th scope="col">Preço</th>
							<th scope="col">Descrição</th>
							<th scope="col">Ações</th>
						</tr>
					</thead>
					<% servicos.forEach(servico => { %>
					<tbody>
						<tr>
							<th scope="row"><%= servico.id %></th>
							<td><%= servico.nome %></td>
							<td>
								<img
									src="<%= servico.imagem %>"
									alt="<%= servico.nome %>"
								/>
							</td>
							<td><%= servico.preco %></td>
							<td><%= servico.descricao %></td>
							<td>
								<div class="actions">
									<a href="/servicos/<%= servico.id %>">
										<button
											type="button"
											class="btn btn-primary"
										>
											Detalhes
										</button>
									</a>
									<a
										href="/admin/services/<%= servico.id %>/edit"
									>
										<button
											type="button"
											class="btn btn-info"
										>
											Editar
										</button>
									</a>
									<form
										action="/admin/services/<%= servico.id %>?_method=DELETE"
										method="POST"
									>
										<button
											type="submit"
											class="btn btn-danger"
										>
											Excluir
										</button>
									</form>
								</div>
							</td>
						</tr>
					</tbody>
					<% }) %>
				</table>
			</div>
		</main>

		<%- include('../../components/footer.ejs') %>
	</body>
</html>
